<h1>Edit Business</h1>

<%= form_with(model: @business, local: true) do |form| %>
  <% if @business.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>
      <ul>
        <% @business.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, value: @business.name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, value: @business.description %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location, value: @business.location %>
  </div>

  <div>
    <%= form.submit 'Update Business' %>
  </div>
<% end %>

<%= link_to 'Back', business_path(@business) %>
