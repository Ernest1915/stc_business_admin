<h1>All Businesses</h1>

<%= link_to 'Add New Business', new_business_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.description %></td>
        <td><%= business.location %></td>
        <td>
          <%= link_to 'Show', business_path(business) %> |
          <%= link_to 'Edit', edit_business_path(business) %> |
          <%= link_to 'Delete', business_path(business), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
